<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.main">

    <application
        android:name="com.android.main.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/window"
        android:label="@string/app_name"
        android:roundIcon="@drawable/window"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.android.main.ui.LoginActivity"
            android:launchMode="singleTop"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.android.main.ui.MainActivity"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateVisible|adjustPan"/>
    </application>

</manifest>